{
  "name": "Card",
  "type": "object",
  "properties": {
    "card_number": {
      "type": "string",
      "description": "Número do cartão (mascarado)"
    },
    "card_holder": {
      "type": "string",
      "description": "Nome impresso no cartão"
    },
    "expiry_date": {
      "type": "string",
      "description": "Data de validade (MM/YY)"
    },
    "cvv": {
      "type": "string",
      "description": "Código CVV"
    },
    "card_type": {
      "type": "string",
      "enum": [
        "debit",
        "credit"
      ],
      "description": "Tipo de cartão"
    },
    "limit": {
      "type": "number",
      "default": 0,
      "description": "Limite do cartão (crédito)"
    },
    "used_limit": {
      "type": "number",
      "default": 0,
      "description": "Limite utilizado"
    },
    "is_active": {
      "type": "boolean",
      "default": true,
      "description": "Cartão ativo"
    },
    "is_blocked": {
      "type": "boolean",
      "default": false,
      "description": "Cartão bloqueado"
    },
    "color": {
      "type": "string",
      "default": "gradient-to-br from-indigo-600 to-purple-600",
      "description": "Cor do cartão"
    }
  },
  "required": [
    "card_number",
    "card_holder",
    "expiry_date",
    "card_type"
  ]
}
